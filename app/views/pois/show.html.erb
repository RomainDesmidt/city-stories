<div class="container-full">
  <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <div class="container-height">
            <div class="footer ">
              <div class="footer-user-change">
                <i class="fa fa-angle-left btn-fa" aria-hidden="true"></i>
                <%= image_tag "logo.png",  alt: "user", class: "avatar-small" %>
              </div>
              <div class="footer-title-show">
              <p>Switch journey</p>
              </div>
              <div class="footer-user-change">
                <%= image_tag "logo.png",  alt: "user", class: "avatar-small" %>
                <i class="fa fa-angle-right btn-fa" aria-hidden="true"></i>
              </div>
            </div>
        <div class="banner">
          <div>
            <%= image_tag "logo.png",  alt: "user", class: "avatar-large" %>
          </div>
          <div class="banner-title">


            <h3> <%= @journey.name %> </h3>

            <p>par <%= current_user.pseudo %> </p>

          </div>
        </div>
          <div class="map" id="map">
          </div>

        <div class="footer-show ">
          <div class="footer-user-change">
            <i class="fa fa-angle-left btn-fa" aria-hidden="true"></i>
          </div>

          <div class="footer-title">
          <h4><%= @poi.name %></h4>
          </div>

          <div class="footer-user-change">
            <i class="fa fa-angle-right btn-fa" aria-hidden="true"></i>
          </div>
        </div>


        <div class="alt-banner">

        </div>

        <div class="body-contenu">

          <div class="body-description">

            <p><%= @poi.description %></p>
            <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>

          </div>

          <hr class="padding-hr">

          <div class="body-media">

            <div class="img-responsive-custom">
            <%= cl_image_tag @poi.photo %>
            <%= @poi.text %>
            <%= @poi.video %>
            <%= @poi.sound %>
            </div>



          </div>

         </div>



      </div>

    </div>

  </div>

</div>

